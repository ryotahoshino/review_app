<section class="section mt-6">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <% @subjects.each do |subject| %>
          <div class="card mb-6">
            <header class="card-header">
              <p class="card-header-title">
                <%= subject.name %>
              </p>
            </header>
            <div class="card-content">
              <div class="content">
                <div class="content average-score">
                  <div class="star-rating mb-2">
                    <div class="star-rating-front" style="width: %">★★★★★</div>
                    <div class="star-rating-back">★★★★★</div>
                  </div>
                  <div class="average-score-desplay ml-3 pt-2">
                  </div>
                </div>
              </div>
            </div>
            <footer class="card-footer">
              <%= link_to subject_review_path(subject), class: "button card-footer-item" do %>
                レビューを見る
              <% end %>
              <%= link_to subject_path(subject), class: "button card-footer-item" do %>
                レビューを書く
              <% end %>
            </footer>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<section>
